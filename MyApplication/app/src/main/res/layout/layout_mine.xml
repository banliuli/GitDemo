<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorTitle"
        android:orientation="vertical">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置"
            android:textSize="16sp"
            android:layout_margin="10dp"
            android:textColor="@color/colorWhite"
            android:background="@color/colorTitle"
            android:layout_alignParentRight="true"
            android:id="@+id/btnshezhi"/>
        <com.example.administrator.suishouji.CircleImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/Iv_layout_mine_img"
            android:layout_below="@+id/btnshezhi"
            android:src="@drawable/img"
            android:layout_centerInParent="true"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Iv_layout_mine_img"
            android:text="点我登录"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:textSize="25dp"
            android:layout_marginTop="10dp"
            android:gravity="center"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/myborder"
            android:layout_marginTop="10dp"
            android:id="@+id/llshoucang">
            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/collect"
                android:layout_gravity="center_vertical"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginLeft="20dp"
                android:text="我的收藏"
                android:id="@+id/collect"
                android:textSize="16dp"
                android:background="@color/colorWhite"
                android:layout_gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/myborder"
            android:layout_marginTop="5dp"
            android:id="@+id/lltext">
            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/edit"
                android:layout_gravity="center_vertical"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginLeft="20dp"
                android:text="我的文本"
                android:id="@+id/text"
                android:textSize="16dp"
                android:background="@color/colorWhite"
                android:layout_gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/myborder"
            android:layout_marginTop="5dp"
            android:id="@+id/llpicture">
            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/picture"
                android:layout_gravity="center_vertical"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginLeft="20dp"
                android:text="我的图片"
                android:textSize="16dp"
                android:id="@+id/picture"
                android:background="@color/colorWhite"
                android:layout_gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/myborder"
            android:layout_marginTop="5dp"
            android:id="@+id/llright">
            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/right"
                android:layout_gravity="center_vertical"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginLeft="20dp"
                android:text="用户满意度调查"
                android:textSize="16dp"
                android:id="@+id/satisfy"
                android:background="@color/colorWhite"
                android:layout_gravity="center"/>
        </LinearLayout>
    </LinearLayout>



</LinearLayout>