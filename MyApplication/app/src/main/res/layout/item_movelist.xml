<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/Iv_item_movefile_file"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/wenjian"/>
        <TextView
            android:id="@+id/Tv_item_movefile_name"
            android:layout_toRightOf="@+id/Iv_item_movefile_file"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="文件夹1"
            android:textSize="18dp"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/Tv_item_movefile_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2016-11-25  22:00"
        android:textSize="15dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="5dp"/>
</LinearLayout>