<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#5677fc"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn_activtiy_main_login"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/personal"
                android:layout_gravity="center"
                android:layout_margin="10dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="随手记"
                android:textSize="30dp"
                android:textColor="#ffffff"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="1" />

            <Button
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:background="@drawable/refresh"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                />


             <Button

                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:textSize="16sp"
                android:text="编辑"
                android:id="@+id/btn_activtiy_main_edit"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:textColor="@color/colorWhite"
                android:background="@color/colorTitle" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#e6e3e6">
            <Button
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:id="@+id/btn_activtiy_main_add"
                android:background="@drawable/tianjia"
                android:layout_marginLeft="10dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#ffffff"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp">
                <SearchView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/searchView"
                    android:layout_below="@+id/linearLayout"
                    android:layout_centerHorizontal="true" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_weight="1">
      <ListView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:id="@+id/Lv_activtiy_main"></ListView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal">
       <RelativeLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:gravity="center"
           android:layout_gravity="center">
           <Button
               android:layout_width="32dp"
               android:layout_height="32dp"
               android:id="@+id/btn_activtiy_main_suishouji1"
               android:background="@drawable/suishouji"/>
           <TextView
               android:layout_width="40dp"
               android:layout_height="18dp"
               android:layout_below="@+id/btn_activtiy_main_suishouji1"
               android:gravity="center"
               android:text="随手记"
               android:textSize="12sp"
               android:textColor="@color/colorBlack"
               android:background="@color/colorWhite"/>
       </RelativeLayout>
        <Button
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:id="@+id/btn_activtiy_main_edit1"
            android:background="@drawable/add"
            android:layout_gravity="center"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center"
            >
            <Button
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:id="@+id/btn_activtiy_main_mine"
                android:background="@drawable/mine" />
            <TextView
                android:layout_width="32dp"
                android:layout_height="18dp"
                android:layout_below="@+id/btn_activtiy_main_mine"
                android:gravity="center"
                android:text="我的"
                android:textSize="12sp"
                android:textColor="@color/colorBlack"
                android:background="@color/colorWhite"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
