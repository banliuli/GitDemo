<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/wenben"
        android:id="@+id/Tv_item_textlist_text"
        android:layout_margin="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/Llyout_textlist"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/Tv_item_textlist_text"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Tv_item_textlist_title"

            android:layout_marginRight="10dp"
            android:textSize="20sp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Tv_item_textlist_date"
            android:layout_below="@+id/Tv_item_textlist_title"
            android:layout_toRightOf="@+id/Tv_item_textlist_text"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:textSize="15sp"
            />
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/xian"
        android:layout_below="@+id/Tv_item_textlist_text"
        android:layout_marginTop="5dp"/>

</RelativeLayout>