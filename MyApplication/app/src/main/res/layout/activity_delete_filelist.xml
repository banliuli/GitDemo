<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#5677fc"
            android:orientation="horizontal"
            >
            <Button
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:id="@+id/btn_activtiy_main_img"
                android:background="@drawable/personal"
                android:layout_gravity="center"
                android:layout_margin="10dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="随手记"
                android:textSize="25dp"
                android:textColor="#ffffff"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="1"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#e6e3e6">
            <Button
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:id="@+id/btn_activtiy_main_add"
                android:background="@drawable/tianjia"
                android:layout_marginLeft="10dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#ffffff"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp">
                <SearchView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/searchView"
                    android:layout_below="@+id/linearLayout"
                    android:layout_centerHorizontal="true" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Lv_delete_item_file"></ListView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全选"
            android:layout_margin="5dp"
            android:layout_gravity="left"
            android:layout_weight="1"
            />
        <Button
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/btn_shape_delete"
            android:text="删除"
            android:textSize="18sp"
            android:textColor="@color/colorWhite"
            android:layout_gravity="right"
            android:gravity="center"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center">
            <Button
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:id="@+id/btn_delete_filelist_suishouji1"
                android:background="@drawable/suishouji"/>
            <TextView
                android:layout_width="40dp"
                android:layout_height="18dp"
                android:layout_below="@+id/btn_delete_filelist_suishouji1"
                android:gravity="center"
                android:text="随手记"
                android:textSize="12sp"
                android:textColor="@color/colorBlack"
                android:background="@color/colorWhite"/>
        </RelativeLayout>
        <Button
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:id="@+id/btn_delete_filelist_edit1"
            android:background="@drawable/add"
            android:layout_gravity="center"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center">
            <Button
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:id="@+id/btn_delete_filelist_mine"
                android:background="@drawable/mine" />
            <TextView
                android:layout_width="32dp"
                android:layout_height="18dp"
                android:layout_below="@+id/btn_delete_filelist_mine"
                android:gravity="center"
                android:text="我的"
                android:textSize="12sp"
                android:textColor="@color/colorBlack"
                android:background="@color/colorWhite"/>
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>