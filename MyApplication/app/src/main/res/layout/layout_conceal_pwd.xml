<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#5677fc">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back"
            android:layout_gravity="center_vertical"
            android:id="@+id/img_activity_concelpwd_back"/>
        <TextView
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:text="设置密码"
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="#ffffff"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="     设置密码   "
            android:textSize="18sp"
            android:gravity="center"
            android:layout_marginLeft="20dp"/>
        <EditText
            android:layout_width="200dp"
            android:layout_height="38dp"
            android:background="@drawable/edit_shape"
            android:layout_marginLeft="10dp"
            android:id="@+id/Et_concealpwd_set"

            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="     确认密码   "
            android:textSize="18sp"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            />
        <EditText
            android:layout_width="200dp"
            android:layout_height="38dp"
            android:background="@drawable/edit_shape"
            android:layout_marginLeft="10dp"
            android:id="@+id/Et_concealpwd_sure"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <Button
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:text="完成"
            android:textSize="20sp"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:textColor="#ffffff"
            android:background="@drawable/btn_finish"
            android:id="@+id/btn_concealpwd_activity_finish"/>
    </LinearLayout>
</LinearLayout>